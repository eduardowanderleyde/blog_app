<div class="card my-3" id="<%= dom_id blog %>">
  <%# <img src="..." class="card-img-top" alt="..."> %>
  <div class="card-header">
    <h5 class="card-title">
        <%= blog.title %>
    </h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= blog.body %></li>
  </ul>
  <div class="card-body">
    <div class="row">
    <%= link_to "All blogs",blogs_path, class:"btn btn-primary col m-1" unless current_page?(blogs_path) %>
    <%= link_to "View",blog_path(blog), class:"btn btn-success col m-1" %>
    <%= link_to "Edit",edit_blog_path(blog), class:"btn btn-warning col m-1" %>
    <%# <%= button_to "Destroy", blog, method: :delete, class:"btn btn-danger my-1" %>
    </div>
  </div>
</div>